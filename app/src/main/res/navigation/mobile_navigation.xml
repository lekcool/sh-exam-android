<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.lkdev.examandroid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_goalFragment"
            app:destination="@id/goalFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_wallet"
        android:name="com.lkdev.examandroid.ui.wallet.WalletFragment"
        android:label="@string/title_wallet"
        tools:layout="@layout/fragment_wallet" />

    <fragment
        android:id="@+id/navigation_achievement"
        android:name="com.lkdev.examandroid.ui.achievement.AchievementFragment"
        android:label="@string/title_achievement"
        tools:layout="@layout/fragment_achievement" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.lkdev.examandroid.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/goalFragment"
        android:name="com.lkdev.examandroid.ui.GoalFragment"
        android:label="fragment_goal"
        tools:layout="@layout/fragment_goal" />
</navigation>